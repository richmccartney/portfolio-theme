{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}
<header class="header">
    <h1 class="logo">
        <a href="/">
            {{@blog.title}}
        </a>
    </h1>
    <a href="/" class="back">Back to listing</a>
    <ul class="social">
        <li>
            <a href="http://twitter.com/rich_mccartney">Twitter</a>
        </li>
        <li>
            <a href="http://github.com/richmccartney">GitHub</a>
        </li>
        <li>
            <a href="http://dribbble.com/richmccartney">Dribbble</a>
        </li>
        <li>
            <a href="http://instagram.com/richmccartney">Instagram</a>
        </li>
    </ul>
</header>
<main class="post-page">
    <article>
        {{#post}}
            <header class="post intro">
                <span class="post-meta">
                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time> {{tags}}
                </span>
                <h1>{{{title}}}</h1>
            </header>
            <section class="content">
                {{content}}
            </section>
            <footer>
                <section class="share">
                    <h4>Share this post</h4>
                    <ul class="social">
                        <li>
                            <a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">Twitter</a>
                        </li>
                        <li>
                            <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">Facebook</a>
                        </li>
                        <li>
                            <a href="https://plus.google.com/share?url={{url absolute="true"}}"
                       onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">Google+</a>
                        </li>
                    </ul>
                </section>
            </footer>
        {{/post}}
    </article>
</main>
